# Variáveis Gerais
region              = "us-east-1"
environment         = "production"

# Variáveis do VPC
vpc_cidr            = "10.0.0.0/16"
public_subnets      = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets     = ["10.0.3.0/24", "10.0.4.0/24"]

# Variáveis do EKS
eks_cluster_name    = "flowise-cluster"
eks_node_instance_type = "t3.medium"
eks_node_count_min  = 2
eks_node_count_max  = 5

# Variáveis do RDS
rds_instance_class  = "db.t3.micro"
rds_allocated_storage = 20
rds_db_name         = "flowise_db"
rds_username        = "admin"
rds_password        = "SuperSecretPassword123" # Substituir por um melhor

# Variáveis do S3
s3_bucket_name      = "flowise-artifacts-prod"

# Variáveis do WAF
waf_name            = "flowise-waf"

# Variáveis do Datadog
datadog_api_key     = "YOUR_DATADOG_API_KEY"
datadog_app_key     = "YOUR_DATADOG_APP_KEY"

# Outros
load_balancer_name  = "flowise-alb"
